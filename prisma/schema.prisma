generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model AdminUser {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String   @default("Admin")
  createdAt    DateTime @default(now())
}

model Comment {
  id          String   @id @default(cuid())
  postSlug    String
  authorName  String
  authorEmail String
  content     String
  status      String   @default("pending") // pending | approved | rejected
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([postSlug])
  @@index([status])
}

model PageView {
  id        String   @id @default(cuid())
  postSlug  String
  path      String
  userAgent String?
  referrer  String?
  createdAt DateTime @default(now())

  @@index([postSlug])
  @@index([createdAt])
}
